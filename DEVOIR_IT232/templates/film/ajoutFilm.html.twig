{% extends 'base.html.twig' %}

{% block title %}Ajout d'un film


{% endblock %}
{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}

		form {

			margin-top: 40px;
		}
		button[type="submit"] {
			padding: 10px;
			margin-top: 50px;
			width: 50;
		}
	</style>

	<div class="example-wrapper">
        <h2>Ajout d'un nouveau film</h2>
		{{ form_start(form) }}
        
		{{ form_row(form.nomFilm) }}
		{{ form_row(form.auteurFilm) }}
        {{ form_row(form.producteurFilm) }}
        {{ form_row(form.dateDeProduction) }}
        {{ form_row(form.dateDePublication) }}
        
		<button type="submit" class="btn btn-primary">Ajouter</button>

		{{ form_end(form) }}
	</div>

{% endblock %}
