{% extends 'base.html.twig' %}

{% block title %}Inscription


{% endblock %}
{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}

		form {

			margin-top: 40px;
		}
		button[type="submit"] {
			padding: 10px;
			margin-top: 50px;
			width: 50;
		}
	</style>

	<div class="example-wrapper">
        <h2 style="text-align:center">Inscription</h2>
		{{ form_start(form) }}
        
		{{ form_row(form.nom) }}
		{{ form_row(form.prenom) }}
        {{ form_row(form.nomUtilisateur) }}
        {{ form_row(form.password) }}
        {{ form_row(form.email) }}
        
		<button type="submit" class="btn btn-primary">S'inscrire</button>

		{{ form_end(form) }}
	</div>

{% endblock %}
